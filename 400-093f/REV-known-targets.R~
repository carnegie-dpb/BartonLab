    "CIPK12",
    "CYP90A1",
    "TCP14",
    "EXPA10",
    "SMZ",
    "KAN2",
    "AGO10",
    "OPT7",
    "IDD5",
    "IDD4",
    "IDD11",
    "IPT7",
    "ZPR1",
    "ZPR2",
    "ZPR3",
    "ZPR4"
)

## initialize all false
REV.targets = (fits$name=="FOOBAR")

## create array of target booleans
for (i in 1:length(REV.target.names)) {
    REV.targets = REV.targets | (fits$name==REV.target.names[i])
}

